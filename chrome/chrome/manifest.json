{
  "manifest_version": 3,
  "name": "Browser Zoom",
  "description": "Only let zoom run in the browser. No more popups!",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://*/*" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
